<% sorted = @posts.sort_by { |k| k["created_at"] } %>
<% sorted.reverse.each do |post| %>
  <% @post = post %>
  <%= render 'posts/message' %>
  <%= render 'posts/timestamp' %>
  <%= render 'comments/form' %>
    <% @comments.each do |comment| %>
      <% @comment = comment %>
      <%= render 'comments/match_comment_to_post' %>
      <% end %>
  <% end %>
